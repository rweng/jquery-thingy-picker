%html(lang="en")
  %head
    %meta( charset="utf-8" )
    %meta(http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1")
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")

    <script src="http://ajax.googleapis.com/ajax/libs/jquery/2.0.0/jquery.min.js"></script>
    %script(type="text/javascript"
            src="/js/jquery-thingy-picker.js")

    / Le HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
      %script(type="text/javascript"
              src="http://html5shim.googlecode.com/svn/trunk/html5.js")
    /[if IE]

    %link(rel="stylesheet" type="text/css" href="/css/jquery-thingy-picker.css")

  %body
    .fb-example
      <div id="fb-root"></div>
      <script src="http://connect.facebook.net/en_US/all.js"></script>

      :javascript
        FB.init({appId: '113738725493871', cookie: true});
        FB.getLoginStatus(function(response) {
                            if (response.session) {
                              init();
                            } else {
                              // no user session available, someone you dont know
                            }
                        });

         function login() {
                            FB.login(function(response) {
                                if (response.status === "connected") {
                                    init();
                                } else {
                                    alert('Login Failed!');
                                }
                            });
                        }

        function init() {
                          FB.api('/me', function(response) {
                              $("#username").html("<img src='https://graph.facebook.com/" + response.id + "/picture'/><div>" + response.name + "</div>");


                              FB.api("/me/friends?fields=id,name,picture", function(response){
                                var items = $.map(response.data, function(e, i){
                                  return {
                                    id: e.id,
                                    name: e.name,
                                    picture: e.picture.data.url
                                  };
                                });
                                $(".fb-example .thingy-picker").thingyPicker({items: items});
                              });
                        });
                  }

        $("#show-items").on("click", function() {
            var itemSelector = $("#jfmfs-container").data('jfmfs');
            $("#selected-items").html(itemSelector.getSelectedIds().join(', '));
        });

      #logged-out-status
        %a(href="javascript:login()") Login

      %div
        #username
        %a#show-items(href="#" style="display:none") Show Selected items
        #selected-items(style="height: 30px;")

        .thingy-picker